{
	"name": "prow-sink",
	"displayName": "Prow Sink",
	"description": "Develop, deploy and debug Prow jobs",
    "version": "0.0.1",
    "publisher": "lyyyuna",
    "repository": {
        "url": "https://github.com/lyyyuna/prow-sink"
    },
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "prowjobs-explorer",
					"title": "Prowjobs Explorer",
					"icon": "media/dep.svg"
				}
			]
		},
		"views": {
			"prowjobs-explorer": [
				{
					"id": "prow-jobs",
					"name": "Jobs"
				}
			]
		},
		"commands": [
			{
				"command": "extension.refresh",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
            },
            {
				"command": "extension.changeprview",
				"title": "Change PR View",
				"icon": {
					"light": "resources/light/number.svg",
					"dark": "resources/dark/number.svg"
				}
            }
		],
		"menus": {
			"view/title": [
				{
					"command": "extension.refresh",
					"when": "view == prow-jobs",
					"group": "navigation"
                },
                {
					"command": "extension.changeprview",
					"when": "view == prow-jobs",
					"group": "navigation"
				}
			]
		},
		"configuration": {
			"title": "Prow Jobs",
			"properties": {
				"prowjobs.focusedRepos": {
					"type": "array",
					"default": [],
					"items": {
						"type": "string"
					},
					"description": "Specify the repos you need to focus on, all the jobs belong to one focused repo will be shown"

				},
				"prowjobs.serverUrl": {
					"type": "string",
					"default": "",
					"description": "Specify the prow deck's server address. Example: https://prow.qiniu.io"
				},
				"prowjobs.focusedJobs": {
					"type": "array",
					"default": [],
					"items": {
						"type": "string"
					},
					"description": "Specify the jobs you need to focus on, only these jobs will trigger notifications and show in tree view."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.43.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"axios": "^0.19.2"
	}
}
