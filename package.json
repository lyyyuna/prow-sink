{
	"name": "prow-sink",
	"displayName": "Prow Sink",
	"description": "Develop, deploy and debug Prow jobs",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.prowjobnoti"
	],
	"main": "./out/extension.js",
	"contributes": {
        "viewsContainers": {
			"activitybar": [
				{
					"id": "prowjobs-explorer",
					"title": "Prowjobs Explorer",
					"icon": "media/dep.svg"
				}
			]
		},
		"views": {
			"prowjobs-explorer": [
				{
					"id": "presubmit-jobs",
					"name": "Presubmit Jobs"
				},
				{
					"id": "postsubmit-jobs",
					"name": "Postsubmit Jobs"
				},
				{
					"id": "periodic-jobs",
					"name": "Periodic Jobs"
				}
			]
		},
		"commands": [
			{
				"command": "extension.prowjobnoti",
                "title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			}
        ],
        "menus": {
			"view/title": [
				{
					"command": "extension.prowjobnoti",
					"when": "view == presubmit-jobs",
					"group": "navigation"
				}
			]
		},
        "configuration": {
            "title": "Prow Jobs",
            "properties": {
              "prowjobs.enable": {
                "type": "boolean",
                "default": true,
                "description": "Enable this extensions"
                },
              "prowjobs.turnOnNotification": {
                "type": "boolean",
                "default": true,
                "description": "Turn on notifications."
              },
              "prowjobs.serverUrl": {
                "type": "string",
                "default": "",
                "description": "Specify the prow deck's server address. Example: https://prow.qiniu.io"
              },
              "prowjobs.focusedJobs": {
                "type": "array",
                "default": [],
                "items": {
                    "type": "string"
                },
                "description": "Specify the jobs you need to focus on, only these jobs will trigger notifications and show in tree view."
              }
            }
          }
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.43.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/superagent": "^4.1.7"
	}
}
